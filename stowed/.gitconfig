[core]
	editor = hx
  	excludesfile = ~/.gitignore
[branch]
	autosetuprebase = always
[help]
	autocorrect = 1
[init]
	defaultBranch = main
[alias]
	s = status -sb
	sw = switch
	b = branch
	c = commit -v
	a = add
	re = restore
	l = pull
	p = push
	f = fetch
	mt = mergetool
	m = merge
	r = rebase
	lg = log --stat
	d = diff
	dt = difftool